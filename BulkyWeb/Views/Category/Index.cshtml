@model List<Category>

<h1>Category List</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model.OrderBy(o => o.DisplayOrder))
        {
            <tr>
                <td>@order.Name</td>
                <td>@order.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>